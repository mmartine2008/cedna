<script>
function FormAltaAccionToJson(){
    var formData = {
        nombre: $('#nombreAccion').val(), 
        titulo: $('#tituloAccion').val(), 
        icono: $('#iconoAccion').val()
    };
    
    var JsonData = JSON.stringify(formData);
    
    return JsonData;
}

function preSubmit(){
    var JsonData = FormAltaAccionToJson();
    $('#JsonData').val(JsonData);

    if ($("#formEditarAccion")[0].checkValidity()){
        $("#formEditarAccion").submit();
    }else{
        $("#formEditarAccion")[0].reportValidity();
    }
}
</script>