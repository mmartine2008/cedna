<script>
    function recuperarClave() {
        userPass = $('#userPass').val();
        userPass = userPass.replace('/', '_');
        
        $.ajax({
            url: url + '/reset-password/'+userPass,
            type: 'get',
            dataType: 'json',
            async: false,
            success: function (data) {
                $('#myModal5').modal('hide');
                console.log(data);
                swal(data.mensaje);
            }
        });
    }
</script>
