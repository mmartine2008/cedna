function preSubmit(){
    var JsonData = FormPlanificacionToJson();
    $('#JsonData').val(JsonData);

    if($("#operariosPlanificacion_2 option").length == 0) {
        mostrarCartelErrorSubmit();
    } else {
        swal({
        title: '<?= $this->translate('__Usted_esta_seguro__') ?>',
        type: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        cancelButtonText: '<?= $this->translate('__Cancelar__') ?>',
        confirmButtonText: '<?= $this->translate('__Si__') ?>',
        }).then((result) => {
        if (result.value) {
            $("#formPlanificacion").submit();
        }
        })
    }
}

