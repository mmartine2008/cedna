function obtenerElementosSelector(idSelector){
    var select1 = document.getElementById(idSelector);
    var options = [];
    for (var i = 0; i < select1.length; i++) {
            var formData = {
                id :  select1.options[i].value
                };
            options.push(formData);
    }

    return options ;
}

function FormPlanificacionToJson(){
    var formData = {
        operariosSeleccionadas :  obtenerElementosSelector("operariosPlanificacion_2"),
        operariosNoSeleccionadas : obtenerElementosSelector("operariosPlanificacion_1"),
    };
    
    var JsonData = JSON.stringify(formData);
    
    return JsonData;
}

function mostrarCartelErrorSubmit() { //ver que texto poner
        swal({
            type: 'error',
            title: '<?= $this->translate('__falta_responder_pregunta_operarios__') ?>',
        })
