    $('#horaInicio').val(PlanificacionJSON.horaInicio);
    $('#horaFin').val(PlanificacionJSON.horaFin);
    $('#titulo').val(PlanificacionJSON.titulo);
    $('#observaciones').val(PlanificacionJSON.observaciones);
}

function cargarSelectores(nombreSelector, arreglo) {
    for (var i = 0; i < arreglo.length; i++){
        var seccion = arreglo[i];
        var option = $("<option></option>")
                            .attr("value", seccion.id)
                            .text(seccion.descripcion);

        $('#'+nombreSelector).append(option);
    }
}


function dibujarSelectFormulario(){
    var operariosNoRelacionadas =  arrOperariosJSON[0];
    cargarSelectores('operariosPlanificacion_1', operariosNoRelacionadas) ;
    var operariosRelacionadas =  arrOperariosJSON[1];
