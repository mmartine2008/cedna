    function createInput(infoType, idPregunta, divElement, idSeccion){
        
        ele = document.createElement('input');
        ele.type = infoType;
        var idEle = "pregunta_"+idPregunta+"_seccion_"+idSeccion;
        ele.name = idEle;
        ele.id = idEle;
