<script>
var PlanificacionJSON = <?= $PlanificacionJSON ?>;
var TareaJSON = <?= $TareaJSON ?>;
var arrFormulariosJSON = <?= $arrFormulariosJSON ?>;

function FormPlanificacionToJson(){
    var formulario = {id : $('#formularioPlanificacion').val()};

    var formData = {
        formulario : formulario
    };
    
    var JsonData = JSON.stringify(formData);
    
    return JsonData;
}

function preSubmit(){
    var JsonData = FormPlanificacionToJson();
    $('#JsonData').val(JsonData);

    if ($("#formPlanificacion")[0].checkValidity()){
        $("#formPlanificacion").submit();
    }else{
        $("#formPlanificacion")[0].reportValidity();
    }
}

$( document ).ready(function() {
    dibujarDatosOrdenDeCompra();
    dibujarSelectFormulario();
    dibujarDetallePlanificacion();
    if (PlanificacionJSON.relevamiento.hasOwnProperty('formulario')){
        $('#formularioPlanificacion').val(PlanificacionJSON.relevamiento.formulario.idFormulario);
    }
    
    verificarMostrarBotonGuardar();
});

function verificarMostrarBotonGuardar(){
    for (var i = 0; i < arrAccionesDisponibles.length; i++){
        var boton = arrAccionesDisponibles[i];

        if (boton.jsFunction === 'preSubmit()'){
            $('#'+boton.idHTMLElement).prop('disabled', false);
            $('#'+boton.idHTMLElement).show();
        }
    }
}

function transformarFechaParaInput(fecha){
    var arrFecha = fecha.split('-');
    //[0] => dia; [1] => mes; [2] => anio

    return arrFecha[2] + '-' + arrFecha[1] + '-' + arrFecha[0];
}

function dibujarDetallePlanificacion(){
    $('#fechaInicio').val(transformarFechaParaInput(PlanificacionJSON.fechaInicio));
    $('#fechaFin').val(transformarFechaParaInput(PlanificacionJSON.fechaFin));
    $('#horaInicio').val(PlanificacionJSON.horaInicio);
    $('#horaFin').val(PlanificacionJSON.horaFin);
    $('#titulo').val(PlanificacionJSON.titulo);
    $('#observaciones').val(PlanificacionJSON.observaciones);
}

function dibujarSelectFormulario(){
    $('#formularioPlanificacion')
        .find('option')
        .remove();

    $('#formularioPlanificacion')
        .append($("<option></option>")
            .attr("value", '')
            .text('-- <?= $this->translate('__Seleccione__') ?> --'));

    for (var i = 0; i < arrFormulariosJSON.length; i++){
        var formulario = arrFormulariosJSON[i];

        var option = $("<option></option>")
                            .attr("value", formulario.idFormulario)
                            .text(formulario.nombre);

        $('#formularioPlanificacion').append(option);
    }
}

function dibujarDatosOrdenDeCompra(){
    if (TareaJSON.ordenDeCompra.hasOwnProperty('id')){
        //Por el momento el numero de la orden de compra va a ser el ID
        $('#nroOrdenDeCompra').val(TareaJSON.ordenDeCompra.id);
        $('#fechaLiberacion').val(TareaJSON.ordenDeCompra.fechaLiberacion);
    }
    
    if (TareaJSON.solicitante.hasOwnProperty('id')){
        $('#solicitanteOrdenDeCompra').val(TareaJSON.solicitante.nombre + ', ' + TareaJSON.solicitante.apellido);
    }
    
    if (TareaJSON.solicitante.hasOwnProperty('id')){
        $('#ejecutorOrdenDeCompra').val(TareaJSON.ejecutor.nombre + ', ' + TareaJSON.ejecutor.apellido);
    }
    
    $('#descripcionOrdenDeCompra').val(TareaJSON.descripcion);
}

</script>