<div class="form-row" id="divSeccionesFormulario">
    <div class="col-md-12">
        <div class="panel panel-default mt-5">
            <div class="panel-heading">
                <h5 class="panel-title"><?= $this->translate('__Listado_de_Secciones_del_Formulario__') ?></h5>
            </div>
            <div class="panel-body mt-5">
                <table id="tablaSecciones" class="table table-hover">
                    <thead>
                        <tr>
                            <th class="text-center"><?= $this->translate('__Numero__') ?></th>
                            <th class="text-center"><?= $this->translate('__Nombre__') ?></th>
                            <th class="text-center"><?= $this->translate('__Descripcion__') ?></th>
                        </tr>
                    </thead>
                    <tbody id="bodyConfSecciones">
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
var formulariosJson = <?= $FormulariosJson ?>;
var filaSeleccionada = -1;

function FormFormulariosToJson(){
    var formData = {
        nombre: $('#formularioNombre').val(),
        descripcion : $('#formularioDescripcion').val(),
    };
    
    var JsonData = JSON.stringify(formData);
    
    return JsonData;
}

function preSubmit(){
    var JsonData = FormFormulariosToJson();
    $('#JsonData').val(JsonData);

    if ($("#formFormulario")[0].checkValidity()){
        $("#formFormulario").submit();
    }else{
        $("#formFormulario")[0].reportValidity();
    }
}

function verificarMostrarBotonGuardar(){
    for (var i = 0; i < arrAccionesDisponibles.length; i++){
        var boton = arrAccionesDisponibles[i];

        if (boton.jsFunction === 'preSubmit()'){
            $('#'+boton.idHTMLElement).prop('disabled', false);
            $('#'+boton.idHTMLElement).show();
        }
    }
}

function verificarMostrarBotonNueva(){
    for (var i = 0; i < arrAccionesDisponibles.length; i++){
        var boton = arrAccionesDisponibles[i];

        if (boton.jsFunction === 'preAltaSeccion()'){
            $('#'+boton.idHTMLElement).prop('disabled', false);
            $('#'+boton.idHTMLElement).show();
        }
    }
}

$( document ).ready(function() {
    if (formulariosJson !== ''){
        $('#formularioNombre').val(formulariosJson.nombre);
        $('#formularioDescripcion').val(formulariosJson.descripcion);
        arrSeccionesJSON = formulariosJson.secciones;
        document.getElementById('divSeccionesFormulario').style.display = 'block';
        dibujarTablaFormularios();
    } else {
        document.getElementById('divSeccionesFormulario').style.display = 'none';
    }
    verificarMostrarBotonGuardar();
    verificarMostrarBotonNueva();
});

function dibujarTablaFormularios(){
        $('#bodyConfSecciones').find('tr').remove();

        for (var i = 0; i < arrSeccionesJSON.length; i++)
        {
            var seccion = arrSeccionesJSON[i];

            var body = document.getElementById("bodyConfSecciones");
            var row = body.insertRow();
            row.id = i;

            var id = row.insertCell(0);
            var nombre = row.insertCell(1);
            var descripcion = row.insertCell(2);

            id.innerHTML = seccion.id;
            nombre.innerHTML = seccion.nombre;
            descripcion.innerHTML = seccion.descripcion;
        }
    }

    $(function() {
        $('#tablaSecciones').on('click', 'tbody tr', function(event) {
            if (!$(this).hasClass('highlight')){
                $('.highlight').removeClass('highlight');

                $(this).addClass('highlight').siblings();
                filaSeleccionada = $(this)[0].id;

                cambiarVisibilidadBotones(true);
            }else{
                $(this).removeClass('highlight');
                filaSeleccionada = -1;
                cambiarVisibilidadBotones(false);
            }
        });
    });

    function borrarSeccion() {
        var result = null;
        var seccion = arrSeccionesJSON[filaSeleccionada];

        $.ajax({
            url: url + '/configuracion/formularios/borrar-seccion/' + seccion.id,
            type: 'post',
            dataType: 'json',
            async: false,
            success: function (data) {
                console.log(data);
            }
        });

        // window.location.replace(url + "/configuracion/formularios/borrar-seccion/" + seccion.id);
        
        return result;
    }

    function preBorrarSeccion(){
        if (filaSeleccionada >= 0){
            var seccion = arrSeccionesJSON[filaSeleccionada];
            
            swal({
                title: '<?= $this->translate('__Eliminar_Seccion__') ?>',
                width: 600,
                text: "<?= $this->translate('__mensaje_eliminar_seccion__') ?>: "+ seccion.nombre +"?",
                type: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                cancelButtonText: '<?= $this->translate('__Cancelar__') ?>',
                confirmButtonText: '<?= $this->translate('__Confirmar__') ?>'
            }).then((result) => {
                if (result.value) {
                    borrarSeccion();
                    window.location.replace(url + "/configuracion/formularios/editar-formulario/"+ formulariosJson.idFormulario);
                }
            });
        }
    }

    function preEditarSeccion(){
        if (filaSeleccionada >= 0){
            var seccion = arrSeccionesJSON[filaSeleccionada];

            window.location.replace(url + "/configuracion/formularios/editar-seccion/" + seccion.id);
        }
    }

    function preAltaSeccion(){
        window.location.replace(url + "/configuracion/formularios/alta-seccion/" + formulariosJson.idFormulario);
    }

</script>