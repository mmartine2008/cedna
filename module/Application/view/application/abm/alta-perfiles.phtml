                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
<script>
function FormAltaPerfilToJson(){
    var formData = {
        nombre: $('#nombrePerfil').val(), 
        descripcion: $('#descripcionPerfil').val()
    };
    
    var JsonData = JSON.stringify(formData);
    
    return JsonData;
}

function preSubmit(){
    var JsonData = FormAltaPerfilToJson();
    $('#JsonData').val(JsonData);

    if ($("#formAltaPerfil")[0].checkValidity()){
        $("#formAltaPerfil").submit();
    }else{
        $("#formAltaPerfil")[0].reportValidity();
    }
}
</script>